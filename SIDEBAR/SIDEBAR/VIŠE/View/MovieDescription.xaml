<UserControl x:Class="SIDEBAR.VIŠE.View.MovieDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIDEBAR.VIŠE.View"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
            >
    <Grid Background="#272426">
        <Button Content="Nazad" Command="{Binding GoBackCommand}" Margin="65,431,604,113" Padding="5" RenderTransformOrigin="3.228,-2.691" Background="Orange" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="MovieTitle" FontSize="28" FontWeight="Bold" Margin="20" Foreground="White"/>
        <Image x:Name="MovieImage" Width="200" Height="300" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock x:Name="MovieDescriptionDetails" FontSize="18" FontWeight="Medium" Margin="240,20,20,20" TextWrapping="Wrap" Foreground="LightGray"/>
