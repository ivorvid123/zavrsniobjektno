<Window x:Class="SIDEBAR.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="30">
            <TextBlock Text="Username" />
            <TextBox x:Name="UsernameTextBox" Margin="0,5,0,15"/>

            <TextBlock Text="Password" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,15"/>

            <Button Content="Register" Click="RegisterButton_Click" Margin="0,5,0,15"/>
        </StackPanel>
    </Grid>
</Window>
